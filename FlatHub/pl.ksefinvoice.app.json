{
    "app-id": "pl.ksefinvoice.app",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "24.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "ksef_wrapper.sh",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--socket=cups",
        "--share=network",
        "--filesystem=xdg-download",
        "--filesystem=xdg-desktop",
        "--filesystem=xdg-documents:ro",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "ksef-binary",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/lib/ksef",
                "cp -r ./* /app/lib/ksef/",
                "install -D pl.ksefinvoice.app.metainfo.xml /app/share/metainfo/pl.ksefinvoice.app.metainfo.xml",
                "install -D pl.ksefinvoice.app.desktop /app/share/applications/pl.ksefinvoice.app.desktop",
                "install -D pl.ksefinvoice.app.png /app/share/icons/hicolor/128x128/apps/pl.ksefinvoice.app.png"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/JDyszczynski/pl.ksefinvoice.app/releases/download/v1.0.3/KsefInvoice-1.0.3.tar.gz",
                    "sha256": "5e10d1784505aa54ffa104ba5ddc0f2980143d071d19a00824b9b6e5519fdf75"
                },
                {
                    "type": "file",
                    "path": "pl.ksefinvoice.app.metainfo.xml"
                },
                {
                    "type": "file",
                    "path": "pl.ksefinvoice.app.desktop"
                },
                {
                    "type": "file",
                    "path": "pl.ksefinvoice.app.png"
                }
            ]
        },
        {
            "name": "launcher",
            "buildsystem": "simple",
            "build-commands": [
                "install -D ksef_wrapper.sh /app/bin/ksef_wrapper.sh"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "ksef_wrapper.sh"
                }
            ]
        }
    ]
}
