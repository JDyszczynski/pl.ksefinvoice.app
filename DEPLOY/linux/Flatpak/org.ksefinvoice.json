{
    "app-id": "pl.ksefinvoice.app",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "ksef_wrapper.sh",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--share=network",
        "--filesystem=host",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "ksef-binary",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/lib/ksef",
                "cp -r KsefInvoice/* /app/lib/ksef/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.dyszczynski.pl/KSEF/Flatpak/KsefInvoice_Linux_Bin_v1.0.3_Beta.tar.gz",
                    "sha256": "f218593d4a5f688dd5e36577bab6dcccdd5e85648aa1e951ee9f7377d9eaeaab"
                }
            ]
        },
        {
            "name": "launcher",
            "buildsystem": "simple",
            "build-commands": [
                "install -D ksef_wrapper.sh /app/bin/ksef_wrapper.sh"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://www.dyszczynski.pl/KSEF/Flatpak/ksef_wrapper.sh",
                    "sha256": "ccdf31a0e4173915be991dba59950d708bd003c880295456904fee290a24a526",
                    "dest-filename": "ksef_wrapper.sh"
                }
            ]
        }
    ]
}