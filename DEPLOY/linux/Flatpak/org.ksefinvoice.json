{
    "app-id": "pl.ksefinvoice.app",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "ksef_wrapper.sh",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--share=network",
        "--filesystem=host",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "ksef-binary",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/lib/ksef",
                "cp -r ./* /app/lib/ksef/"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "dist/KsefInvoice"
                }
            ]
        },
        {
            "name": "launcher",
            "buildsystem": "simple",
            "build-commands": [
                "install -D ksef_wrapper.sh /app/bin/ksef_wrapper.sh"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "ksef_wrapper.sh"
                }
            ]
        }
    ]
}
